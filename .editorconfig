# RNikkei standard editorconfig.
# Do not edit this file, it follows the standard for RNikkei repos.
# See https://github.com/Nikkei/rnikkei-build-tools for more information

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[**{.js,.scss,.html,.hbs,.handlebars,.vcl}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
